<Window x:Class="Desktop_Stare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Stare"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Topmost="True"
        ShowInTaskbar="True"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid Background="Transparent">
        <Image x:Name="FrameImage"
               Stretch="UniformToFill"
               MouseEnter="FrameImage_MouseEnter"
               MouseLeave="FrameImage_MouseLeave"
               MouseLeftButtonDown="FrameImage_MouseLeftButtonDown"
               MouseRightButtonDown="FrameImage_MouseRightButtonDown"
               RenderTransformOrigin="0.5,0.5"
               >
            <Image.RenderTransform>
                <TransformGroup>
                    <RotateTransform x:Name="ImageRotate" Angle="0"/>
                    <ScaleTransform x:Name="ImageScale" ScaleX="1" ScaleY="1"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
